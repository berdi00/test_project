    <link href="https://fonts.googleapis.com/css2?family=Exo+2:wght@100;200;300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <section class="sub-header" class="container-fluid">
        <div>
            <h1>Time to Test</h1>
        </div>
    </section>

    <section id="common" class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form action="/test/<%=cur_student %>" method="post">
                    <p><%=question %></p>
                    <input type="radio" name="test" value="a" id="a">
                    <label for="a"><%=answer_a %></label>
                    
                    <input type="radio" name="test" value="b" id="b">
                    <label for="b"><%=answer_b %></label>

                    <input type="radio" name="test" value="c" id="c">
                    <label for="c"><%=answer_c %></label>

                    <input type="radio" name="test" value="d" id="d">
                    <label for="d"><%=answer_d %></label>
                    <% if (btn_text) {%>
                        <button class="hero-btn" type="submit" name="button">NEXT</button>
                    <% }else {%>
                        <button class="hero-btn" type="submit" name="button">FINISH</button>
                    <% } %>
                </form>
            </div>
        </div>
    </section>

    <section id="footer" class="container-fluid">

        <div class="row align-items-center">

            <div class="col-md-4 brand">

                <h3>Follow us</h3>
                <div class="icons">
                    <a href="#" class="fab fa-facebook-square"></a>
                    <a href="#" class="fab fa-twitter-square"></a>
                    <a href="#" class="fab fa-instagram-square"></a>
                    <a href="#" class="fab fa-pinterest-square"></a>
                </div>

            </div>

            <div class="col-md-4 footer-links">
                <h3>Address:</h3>
                <p>ashgabat, koshi, taslama</p>
            </div>

        </div>

    </section>

</body>
</html>
